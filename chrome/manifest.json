{
  "name": "Pacifica Access Extension",
  "version": "1.0.0",
  "description": "Helps access Pacifica when you are geo-blocked.",
  "manifest_version": 3,
  "permissions": ["declarativeNetRequest"],
  "host_permissions": [
    "https://app.pacifica.fi/*",
    "https://app.pacifica.fi/api/geo*"
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "rules",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  }
}